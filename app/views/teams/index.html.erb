<p id="notice"><%= notice %></p>

<h1><%= t(:team, scope: 'activerecord.models').pluralize %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(:name, scope: 'activerecord.attributes.team') %></th>
      <th><%= t(:trainer, scope: 'activerecord.attributes.team') %></th>
      <th><%= t(:quantity_pokemon, scope: 'activerecord.attributes.team') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.trainer.name %></td>
        <td><%= team.pokemons.count %></td>
        <td><%= link_to t(:show), team %></td>
        <td><%= link_to t(:edit), edit_team_path(team) %></td>
        <td><%= link_to t(:destroy), team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>