        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% teams.each do |team| %>
      <tr class="align-bottom">
        <td><%= team.name %></td>
        <td>
          <%= link_to profile_path(team.trainer) do %>
            <%= team.trainer.name %>
          <% end -%>
        </td>
        <td><%= team.pokemons.count %></td>
        <td class="align-middle">
          <%= link_to 'Exibir', team_path(team),  class: "btn btn-success btn-sm", style: "margin-top: -5px" %>
        </td>
        <% if current_trainer == team.trainer %>
          <td class="align-middle">
            <%= link_to 'Editar', edit_team_path(team),  class: "btn btn-warning btn-sm", style: "margin-top: -5px" %>
          </td>
          <td class="align-middle">
            <%= link_to team, method: :delete,
                data: { confirm: 'VocÃª tem certeza que deseja excluir?' },
                class: "btn btn-danger btn-sm", style: "margin-top: -5px" do %>
                 </i> Excluir
                <% end %>
          </td>
        <% end -%>
      </tr>
    <% end -%>
    </tbody>
  </table>
</div>