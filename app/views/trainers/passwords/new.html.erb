<h2><%= t(:forgot_your_password, scope: "devise.links") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "trainers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t(:send_me_reset_password_instructions, scope: "devise.actions"), class: 'btn btn-primary mt-4'%>
  </div>
<% end %>

<%= render "trainers/shared/links" %>
